{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "build",
            "windows": {
                "command": "${workspaceFolder}/build.bat",
            },
            "linux": {
                "command": "${workspaceFolder}/build.sh",
            },
            "args": [
                "${fileDirname}",
                "${fileBasenameNoExtension}"
            ],
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "shell",
            "label": "run",
            "windows": {
                "command": "${fileDirname}/${fileBasenameNoExtension}.exe",
            },
            "linux": {
                "command": "${fileDirname}/${fileBasenameNoExtension}",
            },
            "problemMatcher": []
        }
    ]
}