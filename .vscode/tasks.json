{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "build",
            "windows": {
                "command": "${workspaceFolder}/build.bat",
            },
            "linux": {
                "command": "${workspaceFolder}/build.sh",
            },
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "shell",
            "label": "run",
            "windows": {
                "command": "${workspaceFolder}/${workspaceFolderBasename}.exe",
            },
            "linux": {
                "command": "${workspaceFolder}/${workspaceFolderBasename}",
            },
            "problemMatcher": []
        },
        {
            "type": "shell",
            "label": "qmlscene",
            "command": [
                "export PATH=$SDKS_LOCATION/Qt5/bin:$PATH;",
                "qmlscene ${fileDirname}/${fileBasename}"
            ],
            "problemMatcher": []
        },
        {
            "type": "shell",
            "label": "python",
            "command": "python ${fileDirname}/${fileBasename}",
            "problemMatcher": []
        }
    ]
}