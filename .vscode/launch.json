  "version": "0.2.0",
  "configurations": [
    {
      "type": "cppdbg",
      "name": "g++ Debugger",
      "request": "launch",
      "program": "${workspaceFolder}/build/${relativeFileDirname}_tst/${relativeFileDirname}_tst",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [],
      "externalConsole": false,
      "windows": {},
      "linux": {
        "MIMode": "gdb",
        "setupCommands": [
          {
            "description": "Enable pretty-printing for gdb",
            "text": "-enable-pretty-printing",
            "ignoreFailures": true
          }
        ],
        "miDebuggerPath": "gdb"
      },
      "osx": {},
    }
  ]
}